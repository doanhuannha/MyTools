<UserControl x:Class="EncodeFile.Views.UCs.PdfPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EncodeFile.Views.UCs"
             xmlns:viewmodel="clr-namespace:EncodeFile.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodel:PdfFileModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:Background="White">
        <Grid Margin="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Margin="5" Content="Selected a pdf" HorizontalAlignment="Left" />
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"  Height="30" Text="{Binding ViewModel.PdfFilePath}" TextWrapping="Wrap"/>
            <Button  Grid.Row="0" Grid.Column="2" Margin="5" HorizontalAlignment="Left" Content="Browser..." Command="{Binding ViewModel.SelectPdfFileCommand}" Height="30" Width="80" />

        <Label Grid.Row="1" Grid.Column="0" Margin="5" Content="Selected a data file" HorizontalAlignment="Left" IsEnabled="{Binding ViewModel.AttachMode}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"  Height="30" Text="{Binding ViewModel.DataFilePath}" TextWrapping="Wrap" IsEnabled="{Binding ViewModel.AttachMode}"/>
        <Button  Grid.Row="1" Grid.Column="2" Margin="5" HorizontalAlignment="Left" Content="Browser..." Command="{Binding ViewModel.SelectDataFileCommand}" Height="30" Width="80" IsEnabled="{Binding ViewModel.AttachMode}"/>

        <Label Grid.Row="2" Grid.Column="0" Margin="5" Content="New file name" HorizontalAlignment="Left" IsEnabled="{Binding ViewModel.DetachMode}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"  Height="30" Text="{Binding ViewModel.DetachFileName, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" IsEnabled="{Binding ViewModel.DetachMode}"/>
            
        <Label Grid.Row="3" Grid.Column="0" Margin="5" Content="Your key" HorizontalAlignment="Left" />
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"  Height="30" Text="{Binding ViewModel.Secret, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
            
        <Button Grid.Row="4" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"  Height="30" Content="{Binding ViewModel.FileMode}" Command="{Binding ViewModel.ActionCommand}"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="5" IsReadOnly="True" IsTabStop="False" BorderThickness="0" Text="{Binding ViewModel.ResultMessage}" HorizontalAlignment="Left" />
        
    </Grid>
</UserControl>
