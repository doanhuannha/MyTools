<UserControl x:Class="EncodeFile.Views.UCs.Base64Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EncodeFile.Views.UCs"
             xmlns:viewmodel="clr-namespace:EncodeFile.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodel:Base64FileModel}"
             mc:Ignorable="d" 
             d:Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
        <Grid Margin="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Margin="5" Content="Selected file" HorizontalAlignment="Left" />
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"  Height="30" Text="{Binding ViewModel.FilePath}" TextWrapping="Wrap"/>
            <Button  Grid.Row="0" Grid.Column="2" Margin="5" HorizontalAlignment="Left" Content="Browser..." Command="{Binding ViewModel.SelectFileCommand}" Height="30" Width="80" />
            <Button Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"  Height="30" Content="{Binding ViewModel.FileMode}" Command="{Binding ViewModel.ActionCommand}"/>
            <Label Grid.Row="2" Grid.Column="0" Margin="5" Content="Base 64" HorizontalAlignment="Left"/>
            <TextBox  Grid.Row="2" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Text="{Binding ViewModel.FileContent}" TextWrapping="Wrap"/>
        </Grid>
</UserControl>
